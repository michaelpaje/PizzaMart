<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBED"
    android:padding="10dp"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Welcome text"
                android:textColor="#29AE61"
                android:textSize="32dp" />

            <ImageView
                android:id="@+id/Popular_img"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_weight="1"
                android:contentDescription="First Item"
                android:padding="5dp"
                android:src="@drawable/homecover1" />

            <TextView
                android:id="@+id/tvmenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Menu"
                android:textColor="#000000"
                android:textSize="30dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:layout_margin="10dp"
                android:background="@drawable/curve">

                <ImageView
                    android:id="@+id/item1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:contentDescription="First Item"
                    android:padding="5dp"
                    android:src="@android:drawable/editbox_dropdown_light_frame"
                    app:layout_constraintEnd_toStartOf="@+id/item2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/item2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@android:drawable/editbox_dropdown_light_frame"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/item1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45sp"
                    android:layout_marginLeft="45sp"
                    android:layout_marginTop="12sp"
                    android:layout_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item1" />

                <TextView
                    android:id="@+id/item2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12sp"
                    android:layout_marginEnd="28sp"
                    android:layout_marginRight="28sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item2" />

                <ImageView
                    android:id="@+id/item3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@android:drawable/editbox_dropdown_light_frame"
                    app:layout_constraintEnd_toStartOf="@+id/item4"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item1_txt" />

                <ImageView
                    android:id="@+id/item4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@android:drawable/editbox_dropdown_light_frame"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/item3"
                    app:layout_constraintTop_toBottomOf="@+id/item2_txt" />

                <TextView
                    android:id="@+id/item3_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="38sp"
                    android:layout_marginLeft="38sp"
                    android:layout_marginTop="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item3" />

                <TextView
                    android:id="@+id/item4_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12sp"
                    android:layout_marginEnd="52sp"
                    android:layout_marginRight="52sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item4" />

                <ImageView
                    android:id="@+id/item5"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@android:drawable/editbox_dropdown_light_frame"
                    app:layout_constraintEnd_toStartOf="@+id/item6"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item3_txt" />

                <ImageView
                    android:id="@+id/item6"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@android:drawable/editbox_dropdown_light_frame"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/item5"
                    app:layout_constraintTop_toBottomOf="@+id/item4_txt" />

                <TextView
                    android:id="@+id/item5_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12sp"
                    android:layout_marginEnd="32sp"
                    android:layout_marginRight="32sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item6" />

                <TextView
                    android:id="@+id/item6_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40sp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginTop="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>