<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginTop="150dp"
        android:id="@+id/img_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/pizzamart_logo"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo"
        android:text="Pizza at your door"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_marginTop="-30dp" />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â©Ryzen 4"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/text_change"
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/the_rider_has_picked_up_your_order"
        android:textColor="@color/black"
        android:layout_below="@+id/text_1"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="32sp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progress_bar"
        android:layout_below="@id/text_change"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:lottie_rawRes="@raw/pizza_preloader"
        app:lottie_autoPlay="true"
        />
</RelativeLayout>